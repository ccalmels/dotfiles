general {
        colors = true
        interval = 5
}

order += "disk /"
order += "ethernet enp3s0"
order += "volume master"
order += "time"

ethernet eth0 {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

time {
        format = "%a %d %b (week %V), %R"
}

disk "/" {
        format = "%free (%avail)/ %total"
}

volume master {
        format = "♪: %volume"
        format_muted = "♪: muted (%volume)"
        device = "pulse:0"
}
